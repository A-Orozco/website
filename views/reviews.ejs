<!DOCTYPE html>

<html>
    <%- include('layouts/head.ejs') %>

    <body>
        <%- include('layouts/navigation.ejs') %>

        <header class="page-header header container-fluid">
          
            <div class="container-fluid ">
                <h1 class="display-5 my-3" id="pageSign">Reviews</h1>
                
                <div class="container bg-light">
                <form action="/postReview" method="post">
                    <label for="album">Album:</label><br>
                    <input type="text"  name="album"><br>
                    <label for="artist">Artist</label><br>
                    <input type="artist" id="artist" name="artist"><br>
                    <label for="title">Title</label>
                    <input type="title" id="title" name="title"><br>

                    <label for="review">Review</label>
                    <input type="review" id="review" name="review"><br>
                    <input type="submit" value="Submit">

                </form>
                </div>
            </div>
          
        </header>

        <main>
            <div class="container-fluid">
                <!-- Container for review posts-->
                <div class="container-fluid">
                    <!--Album:Artist row-->
                    <div class="row credits">
            
                        <div class="col-12">
                            <h2 class="display-6"><!--album var--></h2>
                            <p class="fw-lighter"><!--artist var--></p>
                        </div>
                    </div>
                    <!--album details-->
                    <div class="row">
                        <!--media column-->
                        <div class="col media2">
                             
                            <!--i frame var-->                   
                        </div>
                    </div>
            
                    <div class="row review">
                        <div class="col">
                            <article>
                                <h3><!--title var--></h3>
                                <p class="fw-lighter"><!--author var--></p>
                                <section>
                                    <p class="fw-lighter"><!--quip var--></p>
                                    <!--opinion var-->
                                </section>
                        </article>
                    </div>
            
                </div>
            
                
                    
            
            </div>
            
           
            
            
            </div>
        </main>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>

    
</html>

